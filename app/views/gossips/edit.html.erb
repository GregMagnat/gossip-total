<h1>Modifier le gossip</h1>

<%= form_for @gossip do |f| %>

 <div class="form-group">
    <label>Titre du gossip</label>
    <%= f.text_field :title, class: 'form-control' %>
 </div>

 <div class="form-group">
    <label>Commentaire du gossip</label>
    <%= f.text_area :content, class: 'form-control' %>
 </div>

 <div class="form-group">
    <button type="submit">Modier le commentaire</button>
 </div>
<% end %>
 